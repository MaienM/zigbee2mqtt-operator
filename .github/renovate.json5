{
	$schema: 'https://docs.renovatebot.com/renovate-schema.json',
	extends: [
		'config:recommended',
		':automergeAll',
		':automergeBranch',
		':automergeRequireAllStatusChecks',
		':combinePatchMinorReleases',
		':dependencyDashboard',
		':enableVulnerabilityAlerts',
		':pinVersions',
		':prConcurrentLimit10',
		':prHourlyLimitNone',
		':prNotPending',
		':rebaseStalePrs',
		':semanticCommitsDisabled',
		':separateMultipleMajorReleases',
		'npm:unpublishSafe',
	],
	platformAutomerge: true,
	nix: {
		enabled: true,
		additionalBranchPrefix: 'nix-',
		schedule: 'on friday',
		lockFileMaintenance: {
			enabled: true,
			automerge: true,
			schedule: 'on friday',
			commitMessageTopic: 'nix',
		},
	},
	npm: {
		additionalBranchPrefix: 'npm-',
		lockFileMaintenance: {
			enabled: true,
			automerge: true,
			schedule: 'on friday',
			commitMessageTopic: 'npm',
		},
	},
	packageRules: [
		{
			matchDatasources: ['cargo'],
			matchPackageNames: ['k8s-openapi', 'kube'],
			groupName: 'k8s',
		},
	],
}
